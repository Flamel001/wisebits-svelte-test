{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "strict": true,
        "baseUrl": "./",
        "types": ["svelte"],
        "paths": {
            "src/*": ["src/*"],
            "shared/*": ["src/shared/*"],
            "entities/*": ["src/entities/*"],
            "features/*": ["src/widgets/*"]
        }
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules/*", "public/*"]
}
