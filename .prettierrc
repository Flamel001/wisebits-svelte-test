{
  "tabWidth": 4,
  "printWidth": 120,
  "overrides": [
    {
      "files": "*.svelte",
      "options": {
        "parser": "svelte",
        "svelteSortOrder": "scripts-markup-styles",
        "svelteBracketNewLine": true,
        "trailingComma": "none"
      }
    },
    {
      "files": ["*.js", "*.ts", "*.svelte"],
      "options": {
        "trailingComma": "none",
        "singleQuote": true
      }
    }
  ]
}
